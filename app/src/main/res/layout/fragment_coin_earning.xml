<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CoinEarningFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/EarnCoinsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AppOffersCardView"
        android:backgroundTint="@color/cardViewBackground"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/checkInImg"
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reward_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/softCorner">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Check-In"
                android:textSize="15sp"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@id/checkInImg"
                app:layout_constraintTop_toTopOf="@+id/checkInImg"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn 50 Coins for logging in everyday"
                android:textSize="10sp"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@id/checkInImg"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                android:layout_marginStart="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/EarnCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/coinCardViewBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/coin_96"
                        />
                    <TextView
                        android:id="@+id/userPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="+50"
                        android:gravity="center"
                        android:textColor="@color/coinCardViewText"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/AppOffersCardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/EarnCoinsCardView"
        android:backgroundTint="@color/cardViewBackground"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AppOfferHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="APP OFFERS"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/statusBarColor"/>

            <TextView
                android:id="@+id/Offers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Coming Soon !!"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>