<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nouzze"
        tools:targetApi="31">
        <activity
            android:name=".Activities.FinalActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CheckOut"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Nouzze.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Firebase.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Firebase.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.Nouzze.NoActionBar"></activity>
        <activity
            android:name=".Activities.Address"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.Products"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.AddAddress"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.StoreActivity"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.Nouzze.NoActionBar" />
        <activity
            android:name=".Activities.IntroActivity"
            android:exported="false"
            android:theme="@style/Theme.Nouzze.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>